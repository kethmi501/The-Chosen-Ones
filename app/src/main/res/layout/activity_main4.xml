<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <EditText
        android:id="@+id/lbl_noMeals"
        android:layout_width="396dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/lbl_noMeals"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <EditText
        android:id="@+id/lbl_eCalory"
        android:layout_width="395dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/lbl_eCalory"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_noMeals" />

    <TextView
        android:id="@+id/lbl_navbar3"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="#0095B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back2"
        android:layout_width="65dp"
        android:layout_height="56dp"
        android:background="#0095B6"
        android:onClick="BacktoPage"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar"
        app:layout_constraintStart_toStartOf="@+id/lbl_navbar"
        app:layout_constraintTop_toTopOf="@+id/lbl_navbar"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/lbl_add"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/lbl_add"
        android:textColor="#FBFAFA"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar"
        app:layout_constraintStart_toEndOf="@+id/btn_back2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_calory"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginStart="272dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_eCalory"
        app:layout_constraintStart_toStartOf="@+id/lbl_eCalory"
        app:layout_constraintTop_toTopOf="@+id/lbl_eCalory"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="139dp"
        android:layout_height="53dp"
        android:onClick="saveFood"
        android:text="@string/btn_save"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_eCalory"
        app:layout_constraintVertical_bias="0.174" />

    <EditText
        android:id="@+id/text_name"
        android:layout_width="389dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_navbar3" />

    <EditText
        android:id="@+id/text_size"
        android:layout_width="81dp"
        android:layout_height="49dp"
        android:layout_marginStart="308dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_noMeals"
        app:layout_constraintStart_toStartOf="@+id/lbl_noMeals"
        app:layout_constraintTop_toTopOf="@+id/lbl_noMeals"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>