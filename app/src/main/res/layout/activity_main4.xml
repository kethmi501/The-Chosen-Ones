<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/lbl_name2"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="76dp"
        android:text="@string/lbl_name"
        android:textColor="#090707"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_navbar4" />

    <EditText
        android:id="@+id/text_Viewname"
        android:layout_width="195dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toEndOf="@+id/lbl_name2"
        app:layout_constraintTop_toBottomOf="@+id/lbl_navbar4" />

    <EditText
        android:id="@+id/text_Viewsize"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toEndOf="@+id/lbl_size2"
        app:layout_constraintTop_toBottomOf="@+id/text_Viewname" />

    <TextView
        android:id="@+id/lbl_size2"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_size"
        android:textColor="#090707"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_name2" />

    <TextView
        android:id="@+id/lbl_type2"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_type"
        android:textColor="#090707"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_size2" />

    <EditText
        android:id="@+id/text_Viewtype"
        android:layout_width="195dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toEndOf="@+id/lbl_type2"
        app:layout_constraintTop_toBottomOf="@+id/text_Viewsize" />

    <EditText
        android:id="@+id/text_Viewdate"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="date"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/lbl_date2"
        app:layout_constraintTop_toBottomOf="@+id/text_Viewtype" />

    <TextView
        android:id="@+id/lbl_date2"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_date"
        android:textColor="#090707"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_type2" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="177dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:onClick="updateFood"
        android:text="@string/btn_edit"
        android:textColor="#0B0909"
        android:textSize="24sp"
        app:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view" />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="177dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:onClick="viewAllFood"
        android:text="@string/btn_view"
        android:textColor="#0B0909"
        android:textSize="24sp"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_date2" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:onClick="deleteFood"
        android:text="@string/btn_delete"
        android:textColor="#0B0909"
        android:textSize="24sp"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_edit"
        app:layout_constraintTop_toBottomOf="@+id/btn_view" />

    <TextView
        android:id="@+id/lbl_navbar4"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="#0095B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back3"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_marginBottom="3dp"
        android:background="#0095B6"
        android:onClick="BacktoPage"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar3"
        app:layout_constraintStart_toStartOf="@+id/lbl_navbar3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/lbl_viewFood"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="168dp"
        android:text="@string/lbl_viewFood"
        android:textColor="#FDFCFC"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_back3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>