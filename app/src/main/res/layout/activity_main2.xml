<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/lbl_navbar2"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="#0095B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_FoodDiary"
        android:layout_width="173dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="true"
        android:text="@string/lbl_FoodDiary"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar2"
        app:layout_constraintStart_toEndOf="@+id/btn_home"
        app:layout_constraintTop_toTopOf="@+id/lbl_navbar2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:background="#0095B6"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar"
        app:layout_constraintStart_toStartOf="@+id/lbl_navbar"
        app:layout_constraintTop_toTopOf="@+id/lbl_navbar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/lbl_CaloRemain"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/lbl_CaloRemain"
        android:textColor="#050101"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_navbar2" />

    <TextView
        android:id="@+id/lbl_equal"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="@string/lbl_equal"
        android:textAlignment="center"
        android:textColor="#090202"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/lbl_CaloRemain"
        app:layout_constraintTop_toBottomOf="@+id/lbl_navbar2" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="376dp"
        android:layout_height="62dp"
        android:layout_marginTop="68dp"
        android:onClick="addFood"
        android:text="@string/btn_add"
        android:textColor="#070606"
        android:textSize="24sp"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/text_goal"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lbl_equal"
        app:layout_constraintTop_toBottomOf="@+id/lbl_navbar2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="334dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_CaloRemain"
        app:srcCompat="@drawable/fooddiary" />

    <ImageButton
        android:id="@+id/btn_Viewedit"
        android:layout_width="71dp"
        android:layout_height="58dp"
        android:background="#0095B6"
        android:onClick="viewFood"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar2"
        app:layout_constraintEnd_toEndOf="@+id/lbl_navbar2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/lbl_FoodDiary"
        app:layout_constraintTop_toTopOf="@+id/lbl_navbar2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_edit"
        app:tint="#101010" />
</androidx.constraintlayout.widget.ConstraintLayout>