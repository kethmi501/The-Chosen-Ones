<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/lbl_navbar"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="#0095B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_FoodDiary"
        android:layout_width="149dp"
        android:layout_height="38dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="true"
        android:text="@string/lbl_foodDiary"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar"
        app:layout_constraintEnd_toEndOf="@+id/lbl_navbar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_navbar"
        app:layout_constraintTop_toTopOf="@+id/lbl_navbar"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#0095B6"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar"
        app:layout_constraintEnd_toStartOf="@+id/lbl_FoodDiary"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="@+id/lbl_navbar"
        app:layout_constraintTop_toTopOf="@+id/lbl_navbar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/menu" />

    <ImageButton
        android:id="@+id/btn_nutrition"
        android:layout_width="52dp"
        android:layout_height="53dp"
        android:layout_marginTop="5dp"
        android:background="#0095B6"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_navbar"
        app:layout_constraintEnd_toEndOf="@+id/lbl_navbar"
        app:layout_constraintTop_toTopOf="@+id/lbl_navbar"
        app:srcCompat="@drawable/nutrition" />

    <TextView
        android:id="@+id/lbl_CaloRemain"
        android:layout_width="194dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:text="@string/lbl_calRemain"
        android:textColor="#050101"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_day" />

    <TextView
        android:id="@+id/lbl_Goal"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:text="@string/lbl_goal"
        android:textAlignment="center"
        android:textColor="#0B0202"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_goal" />

    <TextView
        android:id="@+id/lbl_Food"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_Food"
        android:textAlignment="center"
        android:textColor="#070202"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/lbl_plus"
        app:layout_constraintTop_toBottomOf="@+id/text_food" />

    <TextView
        android:id="@+id/lbl_Remain"
        android:layout_width="78dp"
        android:layout_height="29dp"
        android:text="@string/lbl_Remain"
        android:textAlignment="center"
        android:textColor="#0B0202"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toEndOf="@+id/lbl_equal"
        app:layout_constraintTop_toBottomOf="@+id/text_remain" />

    <TextView
        android:id="@+id/lbl_plus"
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_plus"
        android:textAlignment="center"
        android:textColor="#0B0303"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/text_goal"
        app:layout_constraintTop_toBottomOf="@+id/lbl_CaloRemain" />

    <TextView
        android:id="@+id/lbl_equal"
        android:layout_width="41dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/lbl_equal"
        android:textAlignment="center"
        android:textColor="#090202"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/text_food"
        app:layout_constraintTop_toBottomOf="@+id/lbl_CaloRemain" />

    <Button
        android:id="@+id/btn_addFood"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:onClick="addFood"
        android:text="@string/btn_addbk"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Food" />

    <Button
        android:id="@+id/btn_viewFood"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:onClick="viewAllFood"
        android:text="@string/btn_viewFood"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addFood" />

    <TextView
        android:id="@+id/label_day"
        android:layout_width="399dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:text="@string/label_day"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_navbar" />

    <EditText
        android:id="@+id/text_goal"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_CaloRemain" />

    <EditText
        android:id="@+id/text_food"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/lbl_plus"
        app:layout_constraintTop_toBottomOf="@+id/lbl_CaloRemain" />

    <EditText
        android:id="@+id/text_remain"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="2622.0"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toEndOf="@+id/lbl_equal"
        app:layout_constraintTop_toBottomOf="@+id/lbl_CaloRemain" />

</androidx.constraintlayout.widget.ConstraintLayout>